{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist", // creates the dist directory & places compiles files here
    "baseUrl": "./lib"
  },
  "include": [
    "lib/**/*.ts" // specifies that we should include all ts files within lib
  ],
  "exclude": [
    "node_modules"
  ]
}